@using Entity_Layer.Concrete
@model TestSet
@{
    ViewData["Title"] = "Add Test Case for Test Set";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-info" role="alert">
    Please select the Test Case that you want to add!
</div>

<hr />

@using (Html.BeginForm("AddTestCaseforTestSet", "TestSet", FormMethod.Post))
{
    @Html.HiddenFor(model => model.TestSetId)
    @Html.Label("Test Cases")
    @Html.DropDownListFor(model => model.TestCaseId, (List<SelectListItem>)ViewBag.TestCases, new { @class = "form-control"})
    <br />
    <button id="CreateButton"  class="btn btn-success mb-3">Add Test Case<i class="fa fa-plus m-1" style="font-size:15px"></i></button>
}

